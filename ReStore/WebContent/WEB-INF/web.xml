<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ReStore</display-name>
  <welcome-file-list>
    <welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>403</error-code>
    <location>/error403.html</location>
  </error-page>
  <security-constraint>
    <display-name>Administrator</display-name>
    <web-resource-collection>
      <web-resource-name>Administrator</web-resource-name>
      <description></description>
      <url-pattern>/administrator.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>administrator</role-name>
    </auth-constraint>
    <user-data-constraint>
      <description></description>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>Moderator</display-name>
    <web-resource-collection>
      <web-resource-name>Moderator</web-resource-name>
      <description></description>
      <url-pattern>/moderator.xhtml</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>moderator</role-name>
      <role-name>administrator</role-name>
    </auth-constraint>
    <user-data-constraint>
      <description></description>
      <transport-guarantee>CONFIDENTIAL</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>User</display-name>
    <web-resource-collection>
      <web-resource-name>User</web-resource-name>
      <description></description>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>administrator</role-name>
      <role-name>moderator</role-name>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>jdbcRealm</realm-name>
    <form-login-config>
      <form-login-page>/login.html</form-login-page>
      <form-error-page>/error.html</form-error-page>
    </form-login-config>
  </login-config>
  <security-role>
    <description></description>
    <role-name>administrator</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>moderator</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>user</role-name>
  </security-role>
</web-app>